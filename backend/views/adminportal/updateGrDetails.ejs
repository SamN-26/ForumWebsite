<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Subgroup GR Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/update-gr">Subgroup Management</a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <h1 class="text-center">Subgroup GR Management</h1>
        <p class="text-center">Fetch and update the Group Representative for a subgroup.</p>

        <!-- Fetch Subgroup Form -->
        <form id="fetchSubgroupForm" class="my-4">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" id="subgroupNameInput" placeholder="Enter Subgroup Name" required>
                        <button type="submit" class="btn btn-primary">Fetch GR</button>
                    </div>
                </div>
            </div>
        </form>

        <!-- Display and Update GR -->
        <div id="updateGRSection" class="d-none">
            <h3 class="mt-4">Current GR Details</h3>
            <form id="updateGRForm">
                <div class="mb-3">
                    <label for="currentGRId" class="form-label">Current GR ID</label>
                    <input type="text" class="form-control" id="currentGRId" readonly>
                </div>

                <h3 class="mt-4">Update GR Details</h3>
                <div class="mb-3">
                    <label for="newGRId" class="form-label">New GR ID</label>
                    <input type="text" class="form-control" id="newGRId" required>
                </div>
                <button type="submit" class="btn btn-success">Update GR</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/updateGrDetails.js"></script>
</body>
</html>
