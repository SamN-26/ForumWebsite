<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecture Group CR Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/update-cr">Lecture Group Management</a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <h1 class="text-center">Lecture Group CR Management</h1>
        <p class="text-center">Fetch and update the Class Representative for a Lecture Group.</p>

        <!-- Fetch Lecturegroup Form -->
        <form id="fetchLecturegroupForm" class="my-4">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" id="lecturegroupNameInput" placeholder="Enter Lecture Group Name" required>
                        <button type="submit" class="btn btn-primary">Fetch CR</button>
                    </div>
                </div>
            </div>
        </form>

        <!-- Display and Update GR -->
        <div id="updateCRSection" class="d-none">
            <h3 class="mt-4">Current CR Details</h3>
            <form id="updateCRForm">
                <div class="mb-3">
                    <label for="currentCRId" class="form-label">Current CR ID</label>
                    <input type="text" class="form-control" id="currentCRId" readonly>
                </div>

                <h3 class="mt-4">Update CR Details</h3>
                <div class="mb-3">
                    <label for="newCRId" class="form-label">New CR ID</label>
                    <input type="text" class="form-control" id="newCRId" required>
                </div>
                <button type="submit" class="btn btn-success">Update CR</button>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/updateCrDetails.js"></script>
</body>
</html>
