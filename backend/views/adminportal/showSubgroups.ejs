<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lecture Group Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/get-subgroup">Lecture Group Management</a>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        <h1 class="text-center">Lecture Group Management</h1>
        <p class="text-center">Fetch and display the list of Subgroups in a specific lecture group.</p>

        <!-- Fetch Subgroup Form -->
        <form id="fetchSubgroupForm" class="my-4">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <input type="text" class="form-control" id="subgroupNameInput" placeholder="Enter Lecture Group Name" required>
                        <button type="submit" class="btn btn-primary">Fetch SubGroups</button>
                    </div>
                </div>
            </div>
        </form>

        <!-- Display Students in Subgroup -->
        <div id="subgroupDetailsSection" class="d-none">
            <h3 class="mt-4">Subgroups</h3>
            <ul id="studentsList" class="list-group">
                <!-- Student list will be populated dynamically -->
            </ul>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/fetchSubgroupDetails.js"></script>
</body>
</html>
